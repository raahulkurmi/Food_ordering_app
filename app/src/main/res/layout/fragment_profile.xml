<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.profileFragment">

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="57dp"
        android:orientation="horizontal"
        android:background="@drawable/profilestoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:text="Name"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="70dp" />

        <EditText
            android:id="@+id/editname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"

            android:ems="10"
            android:inputType="text"
            android:hint="Rahul chaudhary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19"
            tools:layout_editor_absoluteX="125dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/profilestoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/adress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:text="Adress"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="70dp" />

        <EditText
            android:id="@+id/enteradress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"

            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="Rajkot,rk university\nboys hostel"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19"
            tools:layout_editor_absoluteX="125dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="57dp"
        android:orientation="horizontal"
        android:background="@drawable/profilestoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:text="Email"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="70dp" />

        <EditText
            android:id="@+id/enteremail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"

            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="77rahul@gmail.com"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19"
            tools:layout_editor_absoluteX="125dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="57dp"
        android:orientation="horizontal"
        android:background="@drawable/profilestoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:text="Phone"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="70dp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"

            android:ems="10"
            android:inputType="phone"
            android:hint="9812910774"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19"
            tools:layout_editor_absoluteX="125dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="325dp"
        android:layout_height="57dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/green"
        android:text="Save infromation"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>